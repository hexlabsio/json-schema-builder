{
  "name": "@hexlabs/json-schema-builder",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "generate": "ts-node src/generate.ts",
    "prepare": "husky install",
    "test": "jest --ci --runInBand --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint **/*.ts"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest/globals": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint/eslint-plugin",
      "jest"
    ],
    "rules": {
      "@typescript-eslint/ban-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "@typescript-eslint/no-empty-function": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "jest/expect-expect": 0
    }
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "template",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm outdated"
    }
  },
  "jest": {
    "transform": {
      ".(ts)": "ts-jest"
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "homepage": "",
  "devDependencies": {
    "@hexlabs/json-schema-to-ts": "^1.1.10",
    "@types/jest": "^29.0.3",
    "@types/node": "^16.18.8",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "axios": "^1.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^6.0.0",
    "jest": "^29.0.3",
    "jest-junit": "^10.0.0",
    "json-loader": "^0.5.7",
    "node-loader": "^0.6.0",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.3.2"
  }
}
